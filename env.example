# ===========================================
# KERALA LINE BREAK DETECTION SYSTEM
# Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=5000
API_VERSION=v1
FRONTEND_URL=http://localhost:5173

# ===========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/kerala_line_break
# For Neon/other cloud providers:
# DATABASE_URL=postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===========================================
# EMAIL SERVICE (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=Kerala KSEBL Alerts <alerts@ksebl.gov.in>
SMTP_SECURE=false

# ===========================================
# SMS SERVICE (Twilio)
# ===========================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# OPTIONAL: AI/ML SERVICES
# ===========================================
OPENAI_API_KEY=sk-your-openai-key
TENSORFLOW_MODEL_PATH=./server/ml/model.json

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ===========================================
# CORS CONFIGURATION
# ===========================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# WEBSOCKET CONFIGURATION
# ===========================================
WEBSOCKET_PORT=8080
WEBSOCKET_PATH=/ws

# ===========================================
# FILE UPLOAD
# ===========================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# ===========================================
# REDIS (Optional - for caching)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# ===========================================
# MONITORING (Optional)
# ===========================================
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# ===========================================
# KERALA GRID SPECIFIC
# ===========================================
GRID_VOLTAGE_LEVEL=11000
TYPICAL_FREQUENCY=50
SAMPLING_RATE=10000
DETECTION_THRESHOLD=0.85

# ===========================================
# DEVELOPMENT ONLY
# ===========================================
# Set to true to enable debug logging
DEBUG=false
# Set to true to enable mock data generation
GENERATE_MOCK_DATA=false
